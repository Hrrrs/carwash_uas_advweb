<%- include('layout/header', { title: 'POS - Proses Pembayaran' }) %>

<div class="py-5" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); min-height: 100vh;">
    <div class="container">
        <!-- Back Button -->
        <a href="/admin/dashboard" class="btn btn-outline-light mb-4">
            <i class="bi bi-arrow-left me-2"></i>Kembali ke Dashboard
        </a>

        <div class="row">
            <!-- Transaction Details -->
            <div class="col-lg-8 mb-4">
                <div class="card card-glass">
                    <div class="card-header py-3" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-receipt me-2" style="color: #667eea;"></i>Detail Pesanan</h5>
                            <span class="badge bg-warning text-dark fs-6 px-3"><%= transaction.police_number %></span>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Customer Info -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <p class="mb-1 text-muted"><small>Nama Customer</small></p>
                                <p class="fw-bold mb-0"><%= transaction.customer_name || 'Customer' %></p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1 text-muted"><small>Waktu Order</small></p>
                                <p class="fw-bold mb-0"><%= new Date(transaction.transaction_date).toLocaleString('id-ID') %></p>
                            </div>
                        </div>

                        <hr>

                        <!-- Order Items -->
                        <h6 class="mb-3"><i class="bi bi-list-check me-2"></i>Item Pesanan</h6>
                        <% if (details.length === 0) { %>
                            <p class="text-muted text-center">Belum ada item dalam pesanan ini</p>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th class="text-center">Qty</th>
                                            <th class="text-end">Harga</th>
                                            <th class="text-end">Subtotal</th>
                                            <th class="text-center">Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% details.forEach(item => { %>
                                            <tr>
                                                <td class="fw-medium"><%= item.product_name %></td>
                                                <td class="text-center"><%= item.qty %></td>
                                                <td class="text-end">Rp <%= item.price.toLocaleString('id-ID') %></td>
                                                <td class="text-end fw-bold">Rp <%= item.subtotal.toLocaleString('id-ID') %></td>
                                                <td class="text-center">
                                                    <form action="/admin/pos/<%= transaction.id %>/delete/<%= item.id %>" method="POST" 
                                                          class="d-inline" onsubmit="return confirmDelete('Hapus item ini?')">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Add Service & Payment -->
            <div class="col-lg-4">
                <!-- Add Service Form -->
                <div class="card card-glass mb-4">
                    <div class="card-header py-3" style="background: linear-gradient(135deg, rgba(17, 153, 142, 0.1) 0%, rgba(56, 239, 125, 0.1) 100%);">
                        <h5 class="mb-0"><i class="bi bi-plus-circle me-2" style="color: #11998e;"></i>Tambah Jasa Cuci</h5>
                    </div>
                    <div class="card-body">
                        <form action="/admin/pos/<%= transaction.id %>/add-service" method="POST">
                            <div class="mb-3">
                                <label class="form-label fw-medium">Pilih Layanan</label>
                                <select class="form-select" name="productId" required>
                                    <option value="">-- Pilih Jasa --</option>
                                    <% services.forEach(service => { %>
                                        <option value="<%= service.id %>"><%= service.name %> - Rp <%= service.price.toLocaleString('id-ID') %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-medium">Qty</label>
                                <input type="number" class="form-control" name="qty" value="1" min="1">
                            </div>
                            <button type="submit" class="btn btn-gradient btn-gradient-success w-100">
                                <i class="bi bi-plus-lg me-2"></i>Tambah
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Payment Summary -->
                <div class="card card-glass">
                    <div class="card-header py-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <h5 class="mb-0 text-white"><i class="bi bi-cash-stack me-2"></i>Pembayaran</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="fs-5">Total Bayar:</span>
                            <span class="fs-3 fw-bold" style="color: #667eea;">Rp <%= transaction.total_amount.toLocaleString('id-ID') %></span>
                        </div>
                        
                        <form action="/admin/pos/<%= transaction.id %>/pay" method="POST" onsubmit="return confirm('Proses pembayaran untuk <%= transaction.police_number %>?')">
                            <button type="submit" class="btn btn-gradient w-100 btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Bayar & Selesai
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
