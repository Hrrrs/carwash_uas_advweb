<%- include('layout/header', { title: 'Admin Dashboard' }) %>

<div class="py-5" style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); min-height: 100vh;">
    <div class="container">
        <!-- Header -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
            <div>
                <h2 class="text-white mb-1"><i class="bi bi-speedometer2 me-2"></i>Dashboard Admin</h2>
                <p class="text-white-50 mb-0">Kelola pesanan customer yang masuk</p>
            </div>
            <div class="d-flex gap-2 mt-3 mt-md-0">
                <a href="/products" class="btn btn-outline-light">
                    <i class="bi bi-box-seam me-2"></i>Produk
                </a>
                <a href="/admin/report" class="btn btn-gradient">
                    <i class="bi bi-graph-up me-2"></i>Laporan
                </a>
            </div>
        </div>

        <!-- Alerts -->
        <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i><%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
        <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i><%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Stats Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card card-glass">
                    <div class="card-body d-flex align-items-center">
                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3" 
                             style="width: 60px; height: 60px; background: linear-gradient(135deg, rgba(255, 193, 7, 0.2) 0%, rgba(255, 154, 0, 0.2) 100%);">
                            <i class="bi bi-hourglass-split display-6" style="color: #ffc107;"></i>
                        </div>
                        <div>
                            <h3 class="mb-0 fw-bold"><%= pendingOrders.length %></h3>
                            <span class="text-muted">Pesanan Pending</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Orders -->
        <div class="card card-glass">
            <div class="card-header py-3 d-flex justify-content-between align-items-center" style="background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 154, 0, 0.1) 100%);">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2" style="color: #ffc107;"></i>Pesanan Menunggu</h5>
                <span class="badge bg-warning text-dark"><%= pendingOrders.length %> pesanan</span>
            </div>
            <div class="card-body p-0">
                <% if (pendingOrders.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                        <p class="text-muted mt-3 mb-0">Tidak ada pesanan pending saat ini</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="py-3 ps-4">#</th>
                                    <th class="py-3">Plat Nomor</th>
                                    <th class="py-3">Nama Customer</th>
                                    <th class="py-3">Total Sementara</th>
                                    <th class="py-3">Waktu Order</th>
                                    <th class="py-3 text-center">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% pendingOrders.forEach((order, index) => { %>
                                    <tr>
                                        <td class="ps-4"><%= index + 1 %></td>
                                        <td>
                                            <span class="badge bg-dark fs-6 px-3 py-2" style="letter-spacing: 1px;">
                                                <%= order.police_number %>
                                            </span>
                                        </td>
                                        <td><%= order.customer_name || 'Customer' %></td>
                                        <td class="fw-bold">Rp <%= order.total_amount.toLocaleString('id-ID') %></td>
                                        <td class="text-muted">
                                            <%= new Date(order.transaction_date).toLocaleString('id-ID', { dateStyle: 'short', timeStyle: 'short' }) %>
                                        </td>
                                        <td class="text-center">
                                            <a href="/admin/pos/<%= order.id %>" class="btn btn-gradient btn-sm">
                                                <i class="bi bi-cash-stack me-1"></i>Proses
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
